@model AppUser

<div class="col-md-10 col-md-offset-1" id="profile-wrapper">
    <div class="col-md-12 col-lg-3">
        <div class=" @*col-md-pull-3*@">
            @if (String.IsNullOrEmpty(Model.AvatarUrl) && String.IsNullOrWhiteSpace(Model.AvatarUrl))
            {
                <img class="img-rounded" style="max-height: 300px; max-width: 200px; width: 100%; height: 200px; margin-bottom: 10px;" src="http://www.sdtn.com/files/pictures/sdtn_default_profile_image.jpg" />
            }
            else
            {
                <img class="img-rounded" style="max-height: 300px; max-width: 200px; width: 100%; height: 200px; margin-bottom: 10px;" src="@Url.Content("~/Uploads/ProfilePictures/" + System.IO.Path.GetFileName(Model.AvatarUrl))" />
            }
        </div>
        <div class=" @*col-md-push-9*@">
            <ul class="list-group">
                <li class="list-group-item">
                    @*<span class="badge">14</span>
                    Cras justo odio*@
                    <i class="fa fa-user">&nbsp;&nbsp;</i>
                    @Ajax.ActionLink("Podaci o korisniku", "Details", "User", new { username = @User.Identity.Name }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "profile-data", InsertionMode = InsertionMode.Replace })
                </li>
                <li class="list-group-item">
                    <i class="fa fa-envelope">&nbsp;&nbsp;</i><a href="#">Privatne poruke</a><span class="badge">14</span>
                </li>
                <li class="list-group-item">
                    @*<span class="badge">2</span>
                    Dapibus ac facilisis in*@
                    <i class="fa fa-bar-chart">&nbsp;&nbsp;</i><a href="#">Statistika</a>
                </li>
                <li class="list-group-item">
                    <i class="fa fa-comments-o">&nbsp;&nbsp;</i>@Ajax.ActionLink("Objavljeni postovi", "GetPublishedPosts", "User", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "profile-data", InsertionMode = InsertionMode.Replace })<span id="user-posts-count" class="badge">@ViewBag.PostsCount</span>
                </li>
                <li class="list-group-item">
                    @*<span class="badge">1</span>
                    Morbi leo risus*@
                    <i class="fa fa-user">&nbsp;&nbsp;</i>
                    @Ajax.ActionLink("Promjena podataka", "Edit", "User", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "profile-data", InsertionMode = InsertionMode.Replace })
                </li>
                <li class="list-group-item">
                    @*<span class="badge">2</span>
                    Dapibus ac facilisis in*@
                    <i class="fa fa-user">&nbsp;&nbsp;</i><a href="#">Promjena lozinke</a>
                </li>
                <li class="list-group-item">
                    @*<span class="badge">1</span>
                    Morbi leo risus*@
                    <i class="fa fa-user">&nbsp;&nbsp;</i><a href="#">Projekti</a>
                </li>
                <li class="list-group-item">
                    @*<span class="badge">1</span>
                    Morbi leo risus*@
                    <i class="fa fa-user">&nbsp;&nbsp;</i><a href="#">Vještine</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-9" id="profile-data"> <!-- Ajax targetUpdateId -->
        @Html.Partial("_Details")
    </div>
