@model AppUser

@using(Ajax.BeginForm("Edit", "User", new AjaxOptions 
{
    UpdateTargetId = "profile-data", 
    HttpMethod = "Post", 
    InsertionMode = InsertionMode.Replace 
}))
{
    <fieldset>
        <legend>Lični podaci</legend>
        <div class="form-group">
            <div class="col-md-4"><label>Ime:</label></div>
            <div class="col-lg-10" id="first-name-div">
                @Html.TextBoxFor(model => model.FirstName, new { placeholder = "ime" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Prezime:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.LastName, new { placeholder = "prezime" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Smjer:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Department, new { placeholder = "adresa" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Adresa:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Address, new { placeholder = "adresa" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Email:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Email, new { placeholder = "e-mail" })
            </div>
        </div>
    </fieldset>
    
    <fieldset>
        <legend>Kontakt podaci</legend>
        <div class="form-group">
            <div class="col-md-4"><label>Ime:</label></div>
            <div class="col-lg-10" id="first-name-div">
                @Html.TextBoxFor(model => model.FirstName, new { placeholder = "ime" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Prezime:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.LastName, new { placeholder = "prezime" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Smjer:</label></div>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Department)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Adresa:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Address, new { placeholder = "adresa" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Email:</label></div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Email, new { placeholder = "e-mail" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
}
