@model PagedList.IPagedList<ForumETF.Models.Post>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}


<!-- search row -->
<div class="row" id="search-section">
    <div class="col-md-8">

        @using(Ajax.BeginForm("Index", "Home", new AjaxOptions
        {
            HttpMethod = "GET",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "posts",
        }, new { id = "search-form" }))
        {
            <div class="col-md-8">
                <div class="form-group">
                    <input type="text" name="searchTerm" class="form-control" id="search" value="Unesite pojam za pretragu" />
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;Pretraga</button>
            </div>
        }

    </div>
    <div class="col-md-8" id="home-page-filters">
        <div class="col-md-12">
            @*<a href="#" class="btn-link">Najpopularniji</a>&nbsp;&nbsp;|&nbsp;
            <a href="#" class="btn-link">Najnoviji</a>&nbsp;&nbsp;|&nbsp;
