@model IEnumerable<ForumETF.Models.Category>

<div class="col-md-12">
    <h3>Kategorije</h3>
    <br />
    <nav>
        <ul class="list-group">
            @foreach (var category in Model)
            {
                <li class="list-group-item">
                    <i class="fa fa-folder-open-o"></i>&nbsp;&nbsp;<a href="#">@category.CategoryName</a>&nbsp;(@category.Posts.Count)
                </li>
            }
        </ul>
    </nav>
</div>
